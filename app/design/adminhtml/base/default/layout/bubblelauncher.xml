                <type>js</type><name>bubblelauncher/bubblelauncher.js</name>
            </action>
            <action method="addItem" ifconfig="bubble_launcher/general/enable">
                <type>js</type><name>bubblelauncher/string.score.js</name>
            </action>
            <action method="addItem" ifconfig="bubble_launcher/general/enable">
                <type>js_css</type><name>bubblelauncher/bubblelauncher.css</name>
            </action>
            <action method="addItem" ifconfig="bubble_launcher/general/enable">
                <type>skin_css</type><name>bubblelauncher.css</name>
